<div id="contentColumnHeader">
  <!-- naglowek ##POCZATEK## -->
  ZAMÓWIENIA
  <!-- naglowek ##KONIEC## -->
</div>

<div class="headerSeparator">
  <div class="headerSeparatorPattern"></div>
</div>

<div id="contentColumnMiddle">
  <!-- treść ##POCZATEK## -->

  <%= render_flash flash %>

  <h2>Historia złożonych zamówień</h2>

  <table cellpadding="0" cellspacing="0" class="tabelka" style="width: 100%">
    <tr>
      <th>Numer</th>
      <th>Status</th>
      <th>Data złożenia</th>
    </tr>

    <% @orders.each do |order| %>
        <tr>
          <td><%= h link_to order.number, order %></td>
          <td>
            <%= order.status_text %>
          </td>
          <td>
            <%= l order.created_at, format: :long %>
          </td>
        </tr>
    <% end %>
  </table>

  <!-- treść ##KONIEC## -->
</div>

<div id="contentColumnFooter"></div>