<h1>Editing order</h1>

<%= form_for([:admin, @order]) do |f| %>
    <% if @order.errors.any? %>
        <div id="error_explanation">
          <h2>Wystąpiły następujące błędy:</h2>
          <ul>
            <% @order.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :number %><br/>
      <%= f.text_field :number %>
    </p>
    <p>
      <%= f.label :client_id %><br/>
      <%= f.text_field :client_id %>
    </p>
    <p>
      <%= f.label :status %><br/>
      <%= f.text_field :status %>
    </p>
    <p>
      <%= f.label :notice %><br/>
      <%= f.text_area :notice %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
<% end %>